@using fruitkha_task.Entities;
@model Product;

<div class="col-lg-4 col-md-6 text-center">
    <div class="single-product-item">
        <div class="product-image">
            <a asp-controller="Shops" asp-action="Details" asp-route-id="@Model.Id"><img src="~/img/@Model.ImgPath" alt=""></a>
        </div>
        <h3>@Model.Name</h3>
        <p class="product-price"><span>Per Kg</span> @Model.Price$ </p>
        <a asp-controller="Cart" asp-action="Index" asp-route-id="@Model.Id" class="cart-btn"><i class="fas fa-shopping-cart"></i> Add to Cart</a>
    </div>
</div>
